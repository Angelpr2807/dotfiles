#|||----- Applications -----|||#

# Open Terminal (alacritty)
super + Return
	kitty

# Application menu
ctrl + @space
	rofi -show combi

super + d
	thunar

Print
	flameshot gui

super + Delete
    ~/.config/rofi/powermenu

super + u
    firejail google-chrome-stable &> /dev/null & disown

XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
	$HOME/.config/bspwm/src/scripts/mute.sh

ctrl + Tab
    $HOME/.config/bspwm/src/scripts/toggle_layout.sh

# Play/Pause
XF86AudioPlay
    mpc toggle

# Stop (opcional)
XF86AudioStop
    mpc stop

# Siguiente canción
XF86AudioNext
    mpc next

# Canción anterior
XF86AudioPrev
    mpc prev

# Brillo
# Subir brillo
XF86MonBrightnessUp
    brightnessctl set +10%

# Bajar brillo
XF86MonBrightnessDown
    brightnessctl set 10%-

#|||----- System Keybindings -----|||#

# Show keybindings help
alt + F1
	KeybindingsHelp

# Theme Selector
alt + @space
	RiceSelector

# jgmenu
~button3
  xqp 0 $(xdo id -N Bspwm -n root) && jgmenu --csv-file=~/.config/bspwm/scripts/menu.txt --config-file=~/.config/bspwm/jgmenurc

# Scratchpad
super + alt + o
	tdrop -a -w 70% -h 35% -y 0 -x 15%  --class scratch alacritty --class=scratch

